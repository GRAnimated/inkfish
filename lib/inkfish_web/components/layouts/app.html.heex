<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{page_title(@conn)} Â· Inkfish</title>
    <link rel="stylesheet" href="/assets/app.css" />
    <link
      rel="icon"
      type="image/png"
      href="/images/inkfish.png"
    />
    <script>
      (() => {
          'use strict';
          const getStoredTheme = () => localStorage.getItem('theme');
          const setStoredTheme = theme => localStorage.setItem('theme', theme);
          const getPreferredTheme = () => {
              const storedTheme = getStoredTheme();
              if (storedTheme) return storedTheme;
              return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
          };

          const setTheme = theme => {
              document.documentElement.setAttribute('data-bs-theme', theme);
          };
          const toggleTheme = () => {
              const currentTheme = getPreferredTheme();
              const newTheme = currentTheme === 'light' ? 'dark' : 'light';
              setStoredTheme(newTheme);
              setTheme(newTheme);
              updateIcon(newTheme);
          };
            const updateIcon = theme => {
              const icon = document.querySelector('.theme-icon');
              if (!icon) return;
              const themeDivs = document.querySelectorAll('.theme');
              themeDivs.forEach(div => {
                div.style.color = theme === 'dark' ? '#fff' : '#000';
              });
              icon.src = theme === 'dark' ? '/images/sun.svg' : '/images/moon.svg';
            };

          setTheme(getPreferredTheme());
          updateIcon(getPreferredTheme());

          window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
              if (!getStoredTheme()) {
                  setTheme(getPreferredTheme());
                  updateIcon(getPreferredTheme());
              }
          });
          window.toggleTheme = toggleTheme;
      })();
    </script>
    <script
      type="text/javascript"
      defer
      src="/assets/app.js"
    >
    </script>
    <script>
      window.user_token = "<%= @current_user_token %>";
      window.current_page = "<%= current_page(@conn) %>";
      window.csrf_token = "<%= Phoenix.Controller.get_csrf_token() %>";
      window.upload_path = "<%= ~p"/ajax/uploads" %>";
    </script>
  </head>
  <body>
    <div class="container">
      <header>
        <div class="row">
          <div class="col-md-2">
            <.link navigate={~p"/"}>
              <img src="/images/inkfish.png" class="header-logo"/>
            </.link>
          </div>

          <div class="col-md-4">
            <%= if @current_user && @current_user.is_admin do %>
              {InkfishWeb.Layouts.admin_nav(assigns)}
            <% else %>
              &nbsp;
            <% end %>

            {link("Queue", to: ~p"/ag_jobs")}
          </div>
        </div>

        <div class="row">
          <div class="col-md-8">
            {breadcrumb(@conn)}
          </div>

          <div class="col-md-4">
            <%= if @current_user do %>
              <%= @current_user.email %> <%= link(to: ~p"/users/#{@current_user}") do %>
                <img id="icon" src="/images/user.svg" width="18" height="18" />
              <% end %>
              <%= if @current_ruid do %>
                {link("Resume", to: ~p"/session/resume", method: :post)}
              <% else %>
                <%= link(to: ~p"/session", method: :delete) do %>
                  <img id="icon" src="/images/logout.svg" width="18" height="18" />
                <% end %>
              <% end %>
            <% else %>
              <p id="icon">No Session</p>
            <% end %>

            <button class="nav-btn" onclick="toggleTheme()">
              <img class="theme-icon" id="icon" src="/images/moon.svg" width="18" height="18" />
            </button>
          </div>
        </div>
      </header>
      <.flash kind={:info} flash={@flash} />
      <.flash kind={:error} flash={@flash} />
    </div>

    <div class={
      if assigns[:fluid_grid] do
        "container-fluid inkfish-main-container"
      else
        "container inkfish-main-container"
      end
    }>
      <div class="inkfish-main">
        {@inner_content}
      </div>
    </div>

    <div class="container">
      <div class="course-footer">
        <%= if assigns[:course] do %>
          {InkfishWeb.Layouts.course_footer(assigns)}
        <% end %>
      </div>
      <div class="inkfish-footer">
        <p>
          Inkfish copyright &copy; 2018-2020 Nat Tuck. Licensed under the GNU AGPLv3. There is no
          warranty. This code may cause leprosy. Source code at <a href="https://github.com/NatTuck/inkfish">http://github.com/NatTuck/inkfish</a>.
        </p>
      </div>
    </div>
  </body>
</html>
